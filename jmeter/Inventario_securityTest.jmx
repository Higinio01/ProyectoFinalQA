            <stringProp name="script">def responseCode = prev.getResponseCode()
def responseData = prev.getResponseDataAsString()
def payload = vars.get(&quot;email_payload&quot;)
def description = vars.get(&quot;description&quot;)

log.info(&quot;🔍 Testing: &quot; + description)
log.info(&quot;📧 Payload: &quot; + payload)

// Detectar errores SQL
def sqlErrors = [&quot;syntax error&quot;, &quot;mysql&quot;, &quot;postgresql&quot;, &quot;database&quot;, &quot;constraint&quot;]
def vulnerable = false

sqlErrors.each { error -&gt;
    if (responseData.toLowerCase().contains(error)) {
        vulnerable = true
        log.error(&quot;🚨 SQL INJECTION DETECTED!&quot;)
        log.error(&quot;   Error: &quot; + error)
        log.error(&quot;   Payload: &quot; + payload)
    }
}

// Detectar información sensible
if (responseData.contains(&quot;usuarios&quot;) || responseData.contains(&quot;ADMIN&quot;)) {
    log.error(&quot;🚨 DATABASE SCHEMA LEAKED!&quot;)
}

if (!vulnerable) {
    log.info(&quot;✅ Payload blocked correctly&quot;)
}</stringProp>
