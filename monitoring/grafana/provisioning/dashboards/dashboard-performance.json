{
  "id": null,
  "title": "‚ö° Performance y Carga del Sistema",
  "tags": ["performance", "carga", "latencia"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "üî• Throughput (Requests/min)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count[5m])) * 60",
          "legendFormat": "Total RPS"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 10},
              {"color": "green", "value": 50}
            ]
          },
          "unit": "rpm"
        }
      },
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "‚è±Ô∏è Latencia Promedio",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_sum[5m]) / rate(http_server_requests_seconds_count[5m])",
          "legendFormat": "Avg Latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 0.5},
              {"color": "red", "value": 2}
            ]
          },
          "unit": "s",
          "decimals": 3
        }
      },
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0}
    },
    {
      "id": 3,
      "title": "üéØ Success Rate (%)",
      "type": "stat",
      "targets": [
        {
          "expr": "(sum(rate(http_server_requests_seconds_count{status=~\"2..\"}[5m])) / sum(rate(http_server_requests_seconds_count[5m]))) * 100",
          "legendFormat": "Success Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 95},
              {"color": "green", "value": 99}
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0}
    },
    {
      "id": 4,
      "title": "üîÑ Concurrent Users (Active Sessions)",
      "type": "stat",
      "targets": [
        {
          "expr": "tomcat_sessions_active_current_sessions",
          "legendFormat": "Active Sessions"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 500}
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0}
    },
    {
      "id": 5,
      "title": "üìä Request Volume por Endpoint",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count[5m]) * 60",
          "legendFormat": "{{method}} {{uri}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "rpm"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6}
    },
    {
      "id": 6,
      "title": "‚ö° Response Time Distribution",
      "type": "heatmap",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_bucket[5m])",
          "legendFormat": "{{le}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6}
    },
    {
      "id": 7,
      "title": "üóÑÔ∏è Database Performance",
      "type": "timeseries",
      "targets": [
        {
          "expr": "hikaricp_connections_acquire_seconds",
          "legendFormat": "Connection Acquire Time"
        },
        {
          "expr": "hikaricp_connections_usage_seconds",
          "legendFormat": "Connection Usage Time"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14}
    },
    {
      "id": 8,
      "title": "üíæ Memory Pressure",
      "type": "timeseries",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\"}",
          "legendFormat": "Heap Used"
        },
        {
          "expr": "jvm_memory_committed_bytes{area=\"heap\"}",
          "legendFormat": "Heap Committed"
        },
        {
          "expr": "jvm_memory_max_bytes{area=\"heap\"}",
          "legendFormat": "Heap Max"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
}