{
  "id": null,
  "title": "Sistema de Inventario - Gestion Stock y Productos",
  "tags": ["inventario", "business", "api", "productos"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "ðŸŸ¢ Estado de la API de Inventario",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"inventario-api\"}",
          "legendFormat": "API Status"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "ðŸ”´ API DOWN"}}, "type": "value"},
            {"options": {"1": {"text": "ðŸŸ¢ API UP"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0}
    },

    {
      "id": 5,
      "title": "Requests por Endpoint de Productos",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{uri=~\"/api/productos.*\"}[15s]) * 60",
          "legendFormat": "{{method}} {{uri}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "rpm",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "pointSize": 5,
            "fillOpacity": 10
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
    },
    {
      "id": 6,
      "title": "Errores 4xx/5xx en Productos",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{uri=~\"/api/productos.*\", status=~\"4..\"}[15s])) * 60",
          "legendFormat": "Errores 4xx/min"
        },
        {
          "expr": "sum(rate(http_server_requests_seconds_count{uri=~\"/api/productos.*\", status=~\"5..\"}[15s])) * 60",
          "legendFormat": "Errores 5xx/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "rpm",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "pointSize": 5
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Errores 4xx/min"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "orange"}}]
          },
          {
            "matcher": {"id": "byName", "options": "Errores 5xx/min"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
          }
        ]
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
    },
    {
      "id": 7,
      "title": "Throughput de Productos por MÃ©todo",
      "type": "piechart",
      "targets": [
        {
          "expr": "sum by (method) (rate(http_server_requests_seconds_count{uri=~\"/api/productos.*\"}[15s])) * 60",
          "legendFormat": "{{method}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "rpm",
          "custom": {
            "displayMode": "table",
            "placement": "right"
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
    },
    {
      "id": 8,
      "title": "Response Time Percentiles - Productos",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(http_server_requests_seconds_bucket{uri=~\"/api/productos.*\"}[5m]))",
          "legendFormat": "P50"
        },
        {
          "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{uri=~\"/api/productos.*\"}[5m]))",
          "legendFormat": "P95"
        },
        {
          "expr": "histogram_quantile(0.99, rate(http_server_requests_seconds_bucket{uri=~\"/api/productos.*\"}[5m]))",
          "legendFormat": "P99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "pointSize": 3
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "links": [],
  "liveNow": false,
  "schemaVersion": 37,
  "style": "dark",
